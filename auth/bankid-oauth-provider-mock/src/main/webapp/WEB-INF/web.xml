<?xml version="1.0" encoding="UTF-8"?>
<web-app>
    <display-name>bankid-oauth-provider-mock</display-name>
    <distributable/>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/mock-oauth2-servlet.xml</param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <!-- OAuth2 Managed Endpoints -->
    <servlet>
        <servlet-name>mock-oauth2</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <description>turn off auto-scanning for exception handlers</description>
            <param-name>detectAllHandlerExceptionResolvers</param-name>
            <param-value>false</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
        <async-supported>true</async-supported>
    </servlet>

    <servlet-mapping>
        <servlet-name>mock-oauth2</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <!-- Filters -->
    <filter>
        <filter-name>springSecurityFilterChain</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
        <async-supported>true</async-supported>
        <init-param>
            <param-name>contextAttribute</param-name>
            <param-value>org.springframework.web.servlet.FrameworkServlet.CONTEXT.oauth2</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>springSecurityFilterChain</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Set up passing session id through cookie-->
    <session-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>
</web-app>
