<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.wf.dp.dniprorada">
    <class name="org.wf.dp.dniprorada.model.Region" table="Region">
        <id name="id" column="nID">
            <generator class="native"/>
        </id>

        <property name="name" column="sName" not-null="true"/>

        <bag name="cities" inverse="false" lazy="false" fetch="select" cascade="all-delete-orphan" order-by="name asc">

            <key column="nID_Region" not-null="true"/>
            <one-to-many class="org.wf.dp.dniprorada.model.City"/>
        </bag>
    </class>
</hibernate-mapping>