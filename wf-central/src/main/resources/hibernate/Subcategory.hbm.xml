<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.wf.dp.dniprorada">
    <class name="org.wf.dp.dniprorada.model.Subcategory" table="Subcategory">
        <id name="id" column="nID">
            <generator class="native"/>
        </id>

        <property name="code" column="sID" not-null="true"/>
        <property name="name" column="sName" not-null="true"/>
        <many-to-one name="category" column="nID_Category" not-null="true" lazy="false"/>
        <property name="order" column="nOrder" not-null="true"/>

        <bag name="services" inverse="true" lazy="false" fetch="select" order-by="nOrder asc">
            <key column="nID_Subcategory"/>
            <one-to-many class="org.wf.dp.dniprorada.model.Service"/>
        </bag>
    </class>
</hibernate-mapping>